	<h2> Employees </h2>
        <table id="employee_table">
            <thead> 
                <th> groupName </th> 
                <th> firstName </th>
		<th> lastName  </th>
            </thead>    
            {{{table_body}}}
        <table>

        <form action="/add-group" method="post">
            <fieldset>
                <legend> Add a Group </legend>
                <label> Group Name: </label>  <input type="text" name="group_name"/><br>
                <input type="submit" value="Submit Group"/>
            </fieldset>
        </form>
        <form action="/add-employee" method="post">            
            <fieldset>
                <legend> Add an Existing Employee to a Group </legend>
                <label> Employee First Name: </label>   
                <input type="text" name="first"/><br>
                <label> Employee Last Name: </label>    
                <input type="text" name="last"/><br>
                <label> Group: </label>            	
                <input type="text" name="group_selected"/><br>
                <input type="submit" value="Submit Employee"/>
            </fieldset>
        </form>

        <b>{{{confirmation_msg}}}</b>

